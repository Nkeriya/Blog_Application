<div class="container">
    <%= form_for @article do |form|%>
        <div class="form-group">
            <%= form.text_field :title, placeholder:"title here", class: "form-control"%>
            <% @article.errors.full_messages_for(:title).each do |message|%>
                <div><%= message%> </div>
            <%end%>
        </div>

        <div class="form-group">
            <%= form.text_field :text, placeholder:"text here", class: "form-control"%>
            <% @article.errors.full_messages_for(:text).each do |message|%>
                <div><%= message%> </div>
            <%end%>
        </div>

        <div class="form-group">
            <span><%= form.label "Status:", style: "margin-right:20px;" %>   
            <%= form.select :status, ["Public", "Archived"], selected: "Public", class:"custom-select"%></span>
        </div><br>

        <div class="form-group">
            <%= form.number_field :user_id, id: :article_user_id, value: current_user.id, type: :hidden%>
        </div>
        
        <div >
            <%= form.submit class:"btn btn-info btn-sm"%><br>
        </div>
    <%end%>
</div>