<%= link_to "Back", :back, class:"btn btn-info btn-sm"  %><br/><br/>

<div class="card bg-light mb-3" >
    <div class="card-header"><strong>Auther:</strong> <%= @article.user[:email].split("@")[0].capitalize%></div>
    <div class="card-body">
        <h4 class="card-title"><%= @article.title%></h4>
        <p class="card-text"><em><%= @article.text%></em></p><br/>
        <table>
            <tr>
            <% if user_signed_in?%>
                <%if current_user.id == @article.user_id %>
                <td><%= link_to("Edit", edit_article_path, class: "btn btn-info btn-sm")%> |
                    <%= link_to("Delete", article_path, class: "btn btn-info btn-sm", method: :delete, data:{confirm: "are you sure?"})%></td>
                <%end %>
            <%end %>
            </tr>
        </table>
    </div>
</div>

<div style="float:left; margin-right:70px">
<h4>Add comment</h4>
<%= render "comments/form" %>
</div>

<% if @article.comments.count !=0 %>
<%= render "comments/comment" %>
<% end %>