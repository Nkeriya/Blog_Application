<%= link_to("Back to Article", article_path(@article), class: "btn btn-info btn-sm")%><br>
<br/>

<h3>Edit comment...</h3>

<div class="container">
    <%= form_for ([@article, @comment]) do |form|%>
        <p>
            <%= form.label("Commenter Name")%><br>
            <%= form.text_field :commenter%>
        </p>
        <p>
            <%= form.label ("Comment")%><br>
            <%= form.text_field :body%>
        </p>
        <p>
            <%= form.submit class: "btn btn-info btn-sm"%>
        </p>
    <%end%>
</div>